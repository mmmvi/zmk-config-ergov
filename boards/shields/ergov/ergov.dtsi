#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,studio-layout = &studio_layout;
        zmk,kscan = &kscan0;
        zmk,matrix-transform = &matrix_transform;
    };

    studio_layout: studio_layout {
        compatible = "zmk,studio-layout";
        display-name = "ErgoV Split";

        halves = <&left_half &right_half>;
    };

    left_half: left_half {
        compatible = "zmk,studio-layout-half";
        json-file = "evl.json";
    };

    right_half: right_half {
        compatible = "zmk,studio-layout-half";
        json-file = "evr.json";
    };

    matrix_transform: matrix_transform {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <5>;

        // Left half: cols 0-5 | Right half: cols 6-11
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)   RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)   RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)   RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)   RC(3,6) RC(3,7) RC(3,8) RC(3,9) RC(3,10) RC(3,11)
            RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(4,5)   RC(4,6) RC(4,7) RC(4,8) RC(4,9) RC(4,10) RC(4,11)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;
        diode-direction = "col2row";

        row-gpios =
            <&pro_micro 21 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, // Row 0
            <&pro_micro 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, // Row 1
            <&pro_micro 19 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, // Row 2
            <&pro_micro 18 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>, // Row 3
            <&pro_micro 15 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>; // Row 4

        col-gpios =
            <&pro_micro 14 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>,  // Col 0
            <&pro_micro 16 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>,  // Col 1
            <&pro_micro 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>,  // Col 2
            <&pro_micro 9  (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>,  // Col 3
            <&pro_micro 8  (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>,  // Col 4
            <&pro_micro 7  (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>,  // Col 5
            <&pro_micro 6  (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>,  // Col 6
            <&pro_micro 5  (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>,  // Col 7
            <&pro_micro 4  (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>,  // Col 8
            <&pro_micro 3  (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>,  // Col 9
            <&pro_micro 2  (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>,  // Col 10
            <&pro_micro 1  (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;  // Col 11
    };
};
